set -e

if [ "$SCRIPTS" = "" ] ; then SCRIPTS=`which "$0"` ; SCRIPTS=`dirname "$SCRIPTS"` ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS" ; fi
. "$SCRIPTS/util.sh"

logiciel=pkgconfig

v 0.15.0 || true
v 0.23 || true
v 0.28 || true
v 0.29.1 && prerequis="iconv" && modifs="sisicestbienuniconvgnu" || true
v 0.29.2 || true

sisicestbienuniconvgnu()
{
	#filtrer glib/glib/gconvert.c grep -v '#error.*iconv'
	CPPFLAGS="$CPPFLAGS -DUSE_LIBICONV_GNU=1"
	LDFLAGS="$LDFLAGS -liconv"
	export CPPFLAGS LDFLAGS
}

archive="http://www.freedesktop.org/software/pkgconfig/releases/$logiciel-$version.tar.gz"
pge $version 0.23 && archive="http://pkgconfig.freedesktop.org/releases/pkg-config-$version.tar.gz"

dest="$INSTALLS/$logiciel-$version"

[ -d "$dest" ] && exit 0

prerequis

echo Obtention et décompression… >&2
obtenirEtAllerDansVersion

echo Correction… >&2
for modif in true $modifs ; do $modif ; done

echo Configuration… >&2
./configure --prefix="$dest" --with-internal-glib

echo Correction… >&2
# La modif suivante était nécessaire pour que certains paquets daignent cesser de surcharger mon PATH; malheureusement elle m'empêche aussi d'utiliser (proprement) mon PATH pour surcharger /usr/local.
true ||
filtrer main.c sed -e '/getenv.*PKG_CONFIG_PATH/a\
add_search_dir("/usr/local/lib/pkgconfig");
'

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
sutiliser $logiciel-$version

rm -Rf $TMP/$$
