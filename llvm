do
	touch $TMP/h
	make -j4 && break ||
	find . -newer $TMP/h -type f -not -path "*/CMakeFiles/Progress/*" -not -size 0 -not -name "*.check_cache" | tee /tmp/z | grep -q . ||
	{ echo "[33m# Nous vous pla√ßons dans un shell interactif. Tentez de rattraper le coup.[0m" >&2 && sh ; }
done
#make -j 4 || make -j 4 || make -j 4 || ( echo "# Parfois il faut relancer une seconde fois (le -j 4 s'emm√™le les p√©dales). Pour la seconde fois, passez le if false en true." >&2 ; exit 1 ) # Quand 4 √©ditions de liens tournent en m√™me temps, √ßa finit par p√©ter faute de m√©moire.

